<%- include ../layouts/header.ejs %>

<% if (messages.error) { %>
 <p style="color:red"><%- messages.error %></p>
<% } %>

<% if (messages.success) { %>
 <p style="color:green"><%- messages.success %></p>
<% } %>

<table>
 <tr>
  <th>Room No</th>
  <th>Housekeeper</th>
  <th>No of Bed</th>
  <th>Patient ID</th> 
  <th>Employee ID</th>   
 </tr> 

 <% if (data) { %>
 <% data.forEach(function(user){ %>
  <tr>
   <td><%= user.Room_no %></td>
   <td><%= user.Housekeeper %></td>
   <td><%= user.No_of_bed %></td>
   <td><%= user.Rm_patient_id %></td>
   <td><%= user.Rm_employee_id %></td>
  </tr>
 <% }) %>
 <% } %>
</table>

<%- include ../layouts/footer.ejs %>
